{
  "name": "@pokemon-sprite/pokemon-sprite",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "name": "pokemon-sprite",
    "targets": {
      "build": {
        "executor": "@nx/esbuild:esbuild",
        "outputs": [
          "{options.outputPath}"
        ],
        "defaultConfiguration": "production",
        "options": {
          "platform": "node",
          "outputPath": "apps/pokemon-sprite/dist",
          "format": [
            "cjs"
          ],
          "bundle": false,
          "main": "apps/pokemon-sprite/src/main.ts",
          "tsConfig": "apps/pokemon-sprite/tsconfig.app.json",
          "assets": [
            "apps/pokemon-sprite/src/assets"
          ],
          "esbuildOptions": {
            "sourcemap": true,
            "outExtension": {
              ".js": ".js"
            }
          }
        },
        "configurations": {
          "development": {},
          "production": {
            "esbuildOptions": {
              "sourcemap": false,
              "outExtension": {
                ".js": ".js"
              }
            }
          }
        }
      },
      "fetch-spreadsheet": {
        "executor": "nx:run-commands",
        "configurations": {
          "fetch": {
            "commands": [
              "ts-node apps/pokemon-sprite/src/spreadsheet/fetch-spreadsheet.ts"
            ]
          }
        },
        "defaultConfiguration": "fetch"
      },
      "generate-spritesheet": {
        "executor": "nx:run-commands",
        "configurations": {
          "generate": {
            "commands": [
              "ts-node apps/pokemon-sprite/src/generate-spritesheet/spritesheet-generator.ts"
            ]
          }
        },
        "defaultConfiguration": "generate"
      },
      "convert-assets": {
        "executor": "nx:run-commands",
        "configurations": {
          "convert": {
            "commands": [
              "ts-node apps/pokemon-sprite/src/converter/converter.ts"
            ]
          }
        },
        "defaultConfiguration": "convert"
      },
      "generate-docs": {
        "executor": "nx:run-commands",
        "configurations": {
          "generate": {
            "commands": [
              "ts-node apps/pokemon-sprite/src/generate-docs/docs-generator.ts"
            ]
          }
        },
        "defaultConfiguration": "generate"
      },
      "serve": {
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "pokemon-sprite:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "pokemon-sprite:build:development"
          },
          "production": {
            "buildTarget": "pokemon-sprite:build:production"
          }
        }
      }
    }
  }
}
